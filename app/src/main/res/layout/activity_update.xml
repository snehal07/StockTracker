<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="snehal.com.stocktracker.UpdateActivity"
    android:background="#fefefe">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Click Add to add quantity of item in stock"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="28dp" />

    <Button
        android:id="@+id/buttonAdd"
        style="@style/Base.TextAppearance.AppCompat.Button"
        android:layout_width="141dp"
        android:layout_height="58dp"
        android:layout_alignStart="@+id/buttonAddQuantity"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="19dp"
        android:background="#2877de"
        android:text="Add new Item"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="83dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonAddQuantity"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Click Add Quantity to increment quantity of item"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="188dp" />

    <Button
        android:id="@+id/buttonAddQuantity"
        style="@style/Base.TextAppearance.AppCompat.Button"
        android:layout_width="141dp"
        android:layout_height="58dp"
        android:layout_above="@+id/textView11"
        android:layout_alignStart="@+id/buttonDelete"
        android:layout_marginBottom="41dp"
        android:background="#2877de"
        android:text="Add Quantity"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="226dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonDelete"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:text="Click Sold out to decrement quantity of item"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="327dp" />

    <Button
        android:id="@+id/buttonDelete"
        style="@style/Base.TextAppearance.AppCompat.Button"
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="90dp"
        android:background="#2877de"
        android:text="Sold Out"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="362dp" />

</RelativeLayout>
