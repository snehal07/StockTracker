<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffefe"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="snehal.com.stocktracker.MainActivity">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="347dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:text="Click Update to Add/Delete item from stock"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="73dp" />

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="143dp"
        android:layout_height="64dp"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:background="#2877de"
        android:text="Update"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="111dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="310dp"
        android:layout_height="22dp"
        android:layout_above="@+id/buttonView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Click View to view current quantity in stock"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="264dp" />

    <Button
        android:id="@+id/buttonView"
        android:layout_width="137dp"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonUpdate"
        android:layout_marginBottom="104dp"
        android:background="#2877de"
        android:text="View"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="301dp" />


</RelativeLayout>
